{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "extends": "./tsconfig.build.json",
  "exclude": [
    "src/**/*.test.tsx",
    "src/components/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "node_modules"
  ]
}
