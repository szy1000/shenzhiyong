{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "presets": ["@babel/preset-flow"],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/components/**/*.stories.tsx",
    "./src/stories/*"
  ]
}
